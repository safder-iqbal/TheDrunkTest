{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "TheDrunkTest",
    "default_popup": "views/popup.html"
  },
  "options_page": "views/options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "styles/main.css"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.js",
        "scripts/extension-core.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://twitter.com/*"
      ],
      "css": [
        "styles/main.css",
        "styles/clippy.css"
      ],
      "js": [
        "bower_components/angularjs/angular.js",
        "bower_components/jquery/dist/jquery.js",
        "scripts/social-media/clippy.js",
        "scripts/social-media/social.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "*://*.rbs.co.uk/*",
        "*://*.rbsdigital.com/*",
        "*://*.hsbc.co.uk/*",
        "*://*.halifax.co.uk/*",
        "*://*.barclays.co.uk/*",
        "*://*.santander.co.uk/*",
        "*://*.natwest.com/*"
      ],
      "css": [
        "styles/main.css",
        "styles/overlay.css"
      ],
      "js": [
        "bower_components/angularjs/angular.js",
        "scripts/banking/banking.js",
        "views/overlay.tpl.js"
      ],
      "run_at": "document_end",
      "all_frames": false,
      "web_accessible_resources": [
        "images/overlay-bg.jpg",
        "images/overlay-bg2.png",
        "images/signal.png"
      ]
    }
  ]
}
